    ViewData["Title"] = "Worst Grade";
}

<h1>@ViewData["Title"]</h1>

<div>
    @Model.student.Name Worst Assignment is:
</div>

<div>
    <table>
       <thead>
           <tr>
               <td>Assignment Name</td><td>Assignment Grade</td>
           </tr>
